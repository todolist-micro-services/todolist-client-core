{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/dto": ["src/dto/main.ts"],
      "@core/core/*": ["src/core/*"],
      "@core/reducer/*": ["src/reducer/*"],
      "@core/utils": ["src/utils/main.ts"],
      "@core/viewModels": ["src/viewModels/main.ts"],
      "@core/middleware": ["src/middleware/main.ts"],
    }
  }
}
